<h1>Violin</h1>
<div class="instrument-container d-flex justify-content-around my-box-light flex-wrap mb-2">
<% @violins.each do |violin| %>
<div class ="box" >
<div class="" style="width: 18rem;">
<% unless violin.photos.empty? %>
 <%= cl_image_tag violin.photos.first.key, :width => '300px', :height => '150px', class: "card-img-top"%>
 <% end %>
  <div class="card-body mb-4">  
    <h5 class="card-title"><%= link_to violin[:brand], instrument_path(violin), class: "instrument-title" %></h5>
    <p class="card-text"><%= violin[:category] %></p>
    <p class="card-text"><%= violin[:renting_price] %> JPY/day</p>
    <i class="far fa-heart like-btn"></i>
    <p class ="border mt-3 mb-2"></p>
    <p class="card-text">Owner: <%= violin.user[:first_name]%> <%= violin.user[:last_name] %></p>
  </div>
</div>
</div>
<% end %>
</div>

